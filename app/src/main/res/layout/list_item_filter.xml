<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry">

    <com.cobeisfresh.azil.ui.custom_views.TypefaceTextView
        android:id="@id/filterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="28dp"
        android:paddingStart="28dp"
        android:paddingTop="20dp"
        android:textColor="@color/taupe"
        android:textSize="18sp"
        android:visibility="gone"
        tools:text="Spol" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="28dp"
        android:paddingStart="28dp">

        <com.cobeisfresh.azil.ui.custom_views.TypefaceTextView
            android:id="@id/filterValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/filterValueCheckBox"
            android:layout_toStartOf="@id/filterValueCheckBox"
            tools:text="Male" />

        <com.cobeisfresh.azil.ui.custom_views.TypefaceCheckBox
            android:id="@id/filterValueCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            tools:ignore="RtlSymmetry" />

    </RelativeLayout>

    <View
        android:id="@id/filterDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/divider"
        android:visibility="gone" />

</LinearLayout>